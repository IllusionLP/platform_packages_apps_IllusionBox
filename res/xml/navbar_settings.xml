<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
    android:key="navbar_cat"
    android:title="@string/navbar_cat" >

      <PreferenceScreen
        android:key="@+id/Navigation_dimen"
        android:title="@string/Navigation_dimen_title"
        android:summary="@string/navbar_dimen_summary"
        android:fragment="com.illusion.box.fragments.navigation.NavbarStyleDimenSettings" />

      <PreferenceScreen
        android:key="navbar_button_settings"
        android:fragment="com.android.settings.slim.dslv.ActionListViewSettings"
        android:summary="@string/navbar_button_summary"
        android:title="@string/navbar_button_title">
          <extra android:name="actionMode" android:value="0" />
          <extra android:name="maxAllowedButtons" android:value="5" />
          <extra android:name="disableDeleteLastEntry" android:value="true" />
          <extra android:name="fragment" android:value="com.illusion.box.fragments.navigation.NavbarButtonFragment" />
      </PreferenceScreen>

      <PreferenceScreen
        android:key="@+id/Navigation_color"
        android:title="@string/Navigation_color_title"
        android:summary="@string/navbar_color_summary"
        android:fragment="com.illusion.box.fragments.navigation.NavBarButtonStyle" />

      <SwitchPreference
        android:key="enable_nav_bar"
        android:title="@string/navbar_enable_bar"
        android:summary="@string/navbar_enable_bar_summary" />

      <com.android.settings.cyanogenmod.SecureSettingSwitchPreference
        android:key="search_panel_enabled"
        android:title="@string/navigation_ring_enable_title"
        android:summary="@string/navigation_ring_on_off_summary"
        android:defaultValue="true" />

      <PreferenceScreen
        android:key="@+id/navigation_ring"
        android:title="@string/navigation_ring_title"
        android:summary="@string/navigation_ring_summary"
        android:fragment="com.illusion.box.fragments.navigation.NavRing" />

  </PreferenceCategory>

  <PreferenceCategory
    android:key="advanced_cat"
    android:title="@string/advanced_settings">

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
          android:key="double_tap_sleep_navbar"
          android:title="@string/double_tap_sleep_nav_bar_title"
          android:summary="@string/double_tap_sleep_nav_bar_summary"
          android:defaultValue="true" />

        <ListPreference
          android:key="pref_navbar_menu_location"
          android:entries="@array/pref_navigation_menu_entries"
          android:entryValues="@array/pref_navigation_menu_values"
          android:title="@string/title_pref_menu_location"
          android:summary="@string/summary_pref_menu_location" />

        <ListPreference
          android:key="pref_navbar_menu_display"
          android:entries="@array/pref_menu_display_entries"
          android:entryValues="@array/pref_menu_display_values"
          android:title="@string/title_pref_menu_display"
          android:summary="@string/summary_pref_menu_display" />

  </PreferenceCategory>

</PreferenceScreen>

